{
  "name": "hamhome",
  "version": "1.0.0",
  "private": true,
  "description": "HamHome 浏览器插件",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:edge": "wxt -b edge",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:edge": "wxt build -b edge",
    "build:all": "pnpm build && pnpm build:firefox && pnpm build:edge",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:edge": "wxt zip -b edge",
    "zip:all": "pnpm zip && pnpm zip:firefox && pnpm zip:edge",
    "clean": "rm -rf .wxt .output dist"
  },
  "dependencies": {
    "@hamhome/ai": "workspace:*",
    "@hamhome/types": "workspace:*",
    "@hamhome/ui": "workspace:*",
    "@hamhome/utils": "workspace:*",
    "@mozilla/readability": "^0.5.0",
    "@tanstack/react-virtual": "^3.13.18",
    "@webext-core/proxy-service": "^2.0.0",
    "i18next": "^24.0.0",
    "i18next-browser-languagedetector": "^7.0.0",
    "lucide-react": "^0.469.0",
    "nanoid": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.0.0",
    "turndown": "^7.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/turndown": "^5.0.5",
    "@wxt-dev/module-react": "^1.1.5",
    "postcss-rem-to-pixel": "^4.1.2",
    "sharp": "^0.34.5",
    "typescript": "^5.7.0",
    "wxt": "^0.20.13"
  }
}